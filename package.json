{
  "name": "collabverse-monorepo",
  "private": true,
  "version": "0.1.0",
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "scripts": {
    "dev": "pnpm --filter @collabverse/web dev",
    "dev:simple": "bash scripts/dev/dev-simple.sh",
    "dev:full": "bash scripts/dev/dev-full.sh",
    "dev:ws": "pnpm --filter @collabverse/api dev:ws",
    "dev:ws:full": "pnpm --filter @collabverse/api dev:ws:full",
    "test:ws": "pnpm --filter @collabverse/api test:ws",
    "test:ws:lightweight": "pnpm --filter @collabverse/api test:ws:lightweight",
    "dev:3001": "pnpm --filter @collabverse/web dev:3001",
    "dev:3002": "pnpm --filter @collabverse/web dev:3002",
    "dev:3003": "pnpm --filter @collabverse/web dev:3003",
    "dev:3004": "pnpm --filter @collabverse/web dev:3004",
    "check:performance": "bash scripts/utils/check-performance.sh",
    "kill:ports": "lsof -ti:3000,3001,3002,8080 | xargs kill -9 2>/dev/null || true",
    "kill:node": "pkill -9 node || true",
    "build": "pnpm -w typecheck && pnpm --filter @collabverse/web build",
    "start": "pnpm --filter @collabverse/web start",
    "typecheck": "pnpm --filter @collabverse/web typecheck && pnpm --filter @collabverse/api typecheck",
    "lint": "eslint .",
    "test": "jest",
    "test:update": "jest -u",
    "test:e2e": "pnpm --filter @collabverse/web build && playwright test",
    "test:local": "bash scripts/test/local-test.sh",
    "test:local:setup": "bash scripts/test/setup-local-db.sh",
    "test:local:cleanup": "bash scripts/test/cleanup-local-db.sh",
    "test:local:env": "bash scripts/test/test-with-env.sh",
    "verify:routes": "node scripts/build/verify-routes.mjs",
    "verify:preflight": "node scripts/build/verify-preflight.mjs",
    "ensure-env": "node scripts/utils/ensure-env.mjs",
    "verify": "pnpm ensure-env && pnpm -w lint && pnpm --filter @collabverse/web typecheck && pnpm --filter @collabverse/web build && pnpm -w --filter @collabverse/web run check:routes && pnpm test && pnpm exec playwright install --with-deps && pnpm test:e2e && pnpm verify:routes && node scripts/build/run-vercel-build.mjs",
    "docs:lint": "markdownlint '**/*.md' --ignore node_modules",
    "docs:links": "node scripts/docs/check-docs-links.mjs",
    "reset:ai-agents": "tsx scripts/utils/reset-ai-agents.ts",
    "pr": "bash scripts/utils/create-pr.sh",
    "prepare": "husky install",
    "vercel-build": "pnpm -w typecheck && pnpm -C apps/web build"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@eslint/eslintrc": "^3.1.0",
    "@playwright/test": "^1.46.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "babel-jest": "^30.2.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.4",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-unused-imports": "^3.2.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "markdown-link-check": "^3.11.2",
    "markdownlint-cli": "^0.39.0",
    "prettier": "^3.3.2",
    "ts-jest": "^29.1.2",
    "tsx": "^4.20.6",
    "typescript": "5.5.3",
    "vercel": "^37.14.0"
  },
  "packageManager": "pnpm@9.12.2",
  "dependencies": {
    "server-only": "^0.0.1"
  }
}
