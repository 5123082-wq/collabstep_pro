{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@collabverse/api": [
        "../api/src/index.ts"
      ],
      "@collabverse/api/*": [
        "../api/src/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "app/(app)/app/**/_wip/**",
    "app/(app)/app/**/__drafts__/**",
    "app/(app)/project/**/_wip/**",
    "app/(app)/project/**/__drafts__/**"
  ]
}