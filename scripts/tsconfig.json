{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "baseUrl": ".",
        "paths": {
            "@collabverse/api/*": [
                "../apps/api/src/*"
            ]
        },
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true
    },
    "include": [
        "**/*.ts"
    ]
}